@model WebAppTry3.DBEntities.Track
@using WebAppTry3.DBEntities
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Track</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TrackID" />                     
            <div class="form-group">
                <label asp-for="Album" class="control-label"></label>
                <select asp-for="Album" class="form-control" asp-items="new SelectList(Enum.GetNames(typeof(Album)))"></select>
                @*<span asp-validation-for="Album" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="TrackUrl" class="control-label"></label>
                <input asp-for="TrackUrl" class="form-control" />
                <span asp-validation-for="TrackUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrackName" class="control-label"></label>
                <input asp-for="TrackName" class="form-control" />
                <span asp-validation-for="TrackName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
